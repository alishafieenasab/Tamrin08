@model List<Person>
@{
	<h2>ContactUs</h2>
}
<table class="table table-dark table-striped">
	<thead>
		<tr>
			<th scope="col">#</th>
			<th scope="col">Id</th>
			<th scope="col">Name</th>
			<th scope="col">Action</th>
		</tr>
	</thead>
	<tbody>
		@{int j = 1;}
		@foreach (Person item in Model)
		{
			
			<tr>
				<td>@j</td>
				<td>@item.Id</td>
				<td>@item.Name</td>
				<td><a class = "btn btn-warning" asp-controller = "Home" asp-action = "delete">Delete</a></td>
			</tr>
			j++;
		}
</tbody>
</table>
